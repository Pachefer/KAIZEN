{
  "name": "springboot-ejemplos-practicos",
  "version": "1.0.0",
  "description": "Ejemplos pr√°cticos de Spring Boot con pruebas unitarias",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "start:basic": "node ejemplos/01-spring-boot-basico.js",
    "dev:basic": "nodemon ejemplos/01-spring-boot-basico.js",
    "start:security": "node ejemplos/02-spring-security.js",
    "dev:security": "nodemon ejemplos/02-spring-security.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "spring-boot",
    "java",
    "spring",
    "jpa",
    "testing",
    "examples"
  ],
  "author": "Spring Boot Study Guide",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "ejemplos/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
